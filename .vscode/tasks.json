{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build-active-c-file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "활성 C 파일을 빌드합니다"
    }
  ]
}
